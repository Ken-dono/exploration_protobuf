<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="131dp"
        android:layout_height="58dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="48dp"
        android:onClick="onClickMessageArretUrgence"
        android:text="ArrÃªt d'urgence"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:onClick="onClickConnection"
        android:text="Button co"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSend" />

    <TextView
        android:id="@+id/batteryTextView"
        android:layout_width="281dp"
        android:layout_height="93dp"
        android:layout_marginTop="44dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonStopmarco"
        android:layout_width="115dp"
        android:layout_height="55dp"
        android:layout_marginTop="48dp"
        android:onClick="onClickMessageStopMarco"
        android:text="Stop Marco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toEndOf="@+id/btnSend"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttondeplacementManuel"
        android:layout_width="143dp"
        android:layout_height="60dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:onClick="onClickMessageDeplacementManuel"
        android:text="Deplacement Manuel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSend" />

    <Button
        android:id="@+id/buttonSetExploAlgo"
        android:layout_width="101dp"
        android:layout_height="58dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="64dp"
        android:onClick="onClickMessageSetExploAlgo"
        android:text="Set Explo Algo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStopmarco" />


</androidx.constraintlayout.widget.ConstraintLayout>